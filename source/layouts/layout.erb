<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@olafurg">
    <meta name="twitter:creator" content="@olafurg">
    <meta name="twitter:title" content="<%= data.site_info.author %>">
    <meta name="twitter:description" content="<%= data.site_info.tag  %>">
    <meta name="twitter:image" content="http://olafurg.com/images/profile-olafurg.jpg">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway|Roboto">

    <title><%= current_page.data.title ||= data.site_info.author %></title>

    <%= javascript_include_tag  "all", async: true %>

    <%= stylesheet_link_tag "normalize", "all" %>
  </head>

  <body class="<%= page_classes %>">

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
