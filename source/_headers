  Content-Security-Policy: default-src 'self'; script-src 'self' www.googletagmanager.com 'sha256-j+TS3d/nwp95XiNSsCCMoiQA5Gg1gtMlYY3hO9WJwxE=' https://code.jquery.com https://cdnjs.cloudflare.com https://stackpath.bootstrapcdn.com; style-src 'self' 'sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' https://fonts.googleapis.com https://stackpath.bootstrapcdn.com https://use.fontawesome.com; font-src 'self' https://fonts.gstatic.com https://use.fontawesome.com; img-src 'self'; object-src 'self'; frame-ancestors 'self';

  X-Frame-Options: DENY # block site from being framed

  # Referer policy
